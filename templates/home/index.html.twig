{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block topbar %}
    Tableau de bord
{% endblock %}

{% block body %}
    <div class="ui stats">
        <a href="{{ path('app.dashboard.product.index') }}">
            <div class="stat">
                <div class="value">
                    <i class="horse icon"></i> {{ products }}
                </div>
                <div class="label">
                    produits
                </div>
            </div>
        </a>

        <div class="stat">
            <div class="value">
                <i class="route icon"></i> {{ workflows }}
            </div>
            <div class="label">
                Workflows
            </div>
        </div>
    </div>


    {{ component('Hr', { icon: 'chartline', text: 'Statistiques' }) }}

    <div style="display: flex; justify-content: center;" class="ui segment grid">
        <div class="twelve wide column">
            {{ render_chart(chart) }}
        </div>
    </div>
{% endblock %}
